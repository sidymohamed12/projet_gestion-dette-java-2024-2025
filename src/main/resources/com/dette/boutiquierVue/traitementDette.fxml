<ScrollPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.dette.controllerFx.boutiquier.TraitementDette">
   <content>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="650.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="49.0" prefWidth="600.0">
               <children>
                  <Button onAction="#loadClientListe" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="150.0" text="Client">
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </Button>
                  <MenuButton alignment="CENTER" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="150.0" text="Dette">
                     <items>
                        <MenuItem onAction="#loadDetteListe" mnemonicParsing="false"
                           text="Liste Dette" />
                        <MenuItem onAction="#loadDetteClient" mnemonicParsing="false"
                           text="Voir Dette d'un Client" />
                        <MenuItem onAction="#loadTraitement" mnemonicParsing="false"
                           text="Traitement/Voir Article d'une Dette" />
                     </items>
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </MenuButton>
                  <Button onAction="#loadPayementForm" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="150.0"
                     text="Payement">
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </Button>
                  <Button onAction="#deconnected" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="150.0"
                     style="-fx-background-color: RED;" text="Sign out" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label layoutX="103.0" layoutY="70.0" prefHeight="35.0" prefWidth="405.0"
               text="RECHERCHE DETTE &amp; TRAITEMENT" underline="true">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="searchDetteField" layoutX="30.0" layoutY="125.0" prefHeight="25.0"
               prefWidth="173.0" promptText="recherche dette par id" />
            <Button fx:id="submitSearchDette" layoutX="223.0" layoutY="126.0"
               mnemonicParsing="false" text="rechercher" />
            <TableView fx:id="detteTable" layoutX="23.0" layoutY="165.0" prefHeight="159.0"
               prefWidth="539.0">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="35.33334159851074" text="Id" />
                  <TableColumn fx:id="dateColumn" prefWidth="140.66669464111328" text="Date" />
                  <TableColumn fx:id="montantColumn" prefWidth="107.99992370605469" text="Montant" />
                  <TableColumn fx:id="verserColumn" prefWidth="124.0" text="Montant Verser" />
                  <TableColumn fx:id="restantColumn" prefWidth="132.0" text="Montant Restant" />
               </columns>
            </TableView>
            <Label layoutX="270.0" layoutY="339.0" text="Articles" underline="true">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
            <TableView fx:id="articleTable" layoutX="28.0" layoutY="380.0" prefHeight="159.0"
               prefWidth="367.0">
               <columns>
                  <TableColumn fx:id="refColumn" prefWidth="72.0" text="ref" />
                  <TableColumn fx:id="libelleColumn" prefWidth="92.6667251586914" text="Libelle" />
                  <TableColumn fx:id="qteStockColumn" prefWidth="86.66661071777344" text="qteStock" />
                  <TableColumn fx:id="prixColumn" prefWidth="112.6666259765625" text="Prix unitaire" />
               </columns>
            </TableView>
            <TableView fx:id="detailTable" layoutX="394.0" layoutY="380.0" prefHeight="159.0"
               prefWidth="169.0">
               <columns>
                  <TableColumn fx:id="qteVenduColumn" prefWidth="75.0" text="QteVendu" />
                  <TableColumn fx:id="totalColumn" prefWidth="92.00003051757812" text="Total" />
               </columns>
            </TableView>
            <HBox layoutX="162.0" layoutY="580.0" prefHeight="40.0" prefWidth="275.0">
               <children>
                  <Button fx:id="accepter" mnemonicParsing="false" prefHeight="50.0"
                     prefWidth="100.0" style="-fx-background-color: green;" text="accepter"
                     textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
                  <Separator orientation="VERTICAL" prefHeight="40.0" prefWidth="75.0" />
                  <Button fx:id="refuser" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="100.0" style="-fx-background-color: red;" text="refuser"
                     textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>