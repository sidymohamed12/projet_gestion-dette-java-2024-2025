   <content>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="630.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="49.0" prefWidth="587.0">
               <children>
                  <MenuButton alignment="CENTER" mnemonicParsing="false" prefHeight="49.0"
                     prefWidth="437.0" text="Dette">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadDetteClient"
                           text="Liste Dette" />
                        <MenuItem mnemonicParsing="false" onAction="#loadDemandeClient"
                           text="Liste Demande Dette" />
                        <MenuItem mnemonicParsing="false" onAction="#loadDetteRelance"
                           text="Faire Une relance d'une Dette Anuuler" />
                     </items>
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </MenuButton>
                  <Button mnemonicParsing="false" onAction="#deconnected" prefHeight="49.0"
                     prefWidth="150.0" style="-fx-background-color: RED;" text="Sign out"
                     textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="22.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label layoutX="195.0" layoutY="64.0" text="LES DETTES ANNULEES " underline="true">
