            </TableView>
            <TableView fx:id="detailTable" layoutX="396.0" layoutY="377.0" prefHeight="159.0"
               prefWidth="169.0">
               <columns>
                  <TableColumn fx:id="qteVenduColumn" prefWidth="75.0" text="QteVendu" />
                  <TableColumn fx:id="totalColumn" prefWidth="92.00003051757812" text="Total" />
               </columns>
            </TableView>
            <Button layoutX="237.0" layoutY="560.0" mnemonicParsing="false"
               style="-fx-background-color: #00ce29;" text="RELANCER" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>