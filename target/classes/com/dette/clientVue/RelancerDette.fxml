               prefWidth="367.0">
               <columns>
                  <TableColumn fx:id="refColumn" prefWidth="72.0" text="ref" />
                  <TableColumn fx:id="libelleColumn" prefWidth="92.6667251586914" text="Libelle" />
                  <TableColumn fx:id="qteStockColumn" prefWidth="86.66661071777344" text="qteStock" />
